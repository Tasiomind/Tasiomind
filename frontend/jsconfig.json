{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strict": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vuetify",
      "vite/client",
      "vue3-toastify/global",
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@appConfig": [
        "appConfig.js"
      ],
      "@axios": [
        "src/plugins/API/index.js"
      ],
      "@auth": [
        "src/store/modules/auth.js"
      ],
      "@query": [
        "src/plugins/graphql/queries/"
      ],
      "@mutation": [
        "src/plugins/graphql/mutations/"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@config": [
        "src/config.js"
      ],

    },
  },
  "include": [
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.jsx",
    "src/**/*.vue",
    "vite.config.js",
    "auto-imports.d .ts",
  ]
}
